<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoToApp2.AddTaskPage">
    
    
    <VerticalStackLayout Padding="20">
        <Grid ColumnDefinitions="Auto, *">
            <Label VerticalOptions="Center" Margin="0,0,10,0" FontAttributes="Bold">Wpisz tytuł:</Label>
            <Entry Grid.Column="1" x:Name="TaskName"></Entry>
        </Grid>

        <Editor x:Name="TaskDesc" HeightRequest="150" Margin="0,10,0,10" Placeholder="Szczegóły zadania...">
            
        </Editor>

        <Button x:Name="SaveBtn" Text="Zapisz" Clicked="SaveBtn_Clicked"></Button>
    </VerticalStackLayout>
</ContentPage>